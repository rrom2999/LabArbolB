
@{
    ViewBag.Title = "PedidoDeMedicamento";
}

<html>
<head>
    <title>Pedidos</title>
</head>

<body>
    <script>
        function redireccionarInicio() {
            document.location.href = "/Medicamentos/Menu"
        }

    </script>
    <style>
        body {
            background-color: gray;
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0%;
            left: 0%;
        }

        #Datos {
            background-color: #BDBDBD;
            color: black;
            width: 25%;
            height: 60%;
            position: fixed;
            top: 20%;
            left: 35%;
            border-radius: 6px;
            border: 2px solid black;
        }

        .bt {
            text-decoration: none;
            font-weight: 400;
            font-size: 14px;
            color: #000000;
            background-color: transparent;
            border-width: 3px;
            border-style: solid;
            border-color: #000000;
            width: 35%;
            height: 10%;
            text-align: center;
        }

            .bt:hover {
                text-decoration: none;
                font-weight: 400;
                font-size: 14px;
                color: #000000;
                background-color: gray;
                border-width: 3px;
                border-style: solid;
                border-color: #000000;
                width: 35%;
                height: 10%;
                text-align: center;
            }

        .txtid {
            border-radius: 1px;
            background-color: #EEEEEE;
        }
    </style>
    <div id="Datos">
        <form action="/Medicamentos/Compras" method="post">
            <br />
            <center><h2>Factura de Pedido</h2></center>
            <br /><br />
            <center> <input type="text" name="Nombre" placeholder="Nombre" value="" required class="txtid" /> </center><br /><br />
            <center><input type="text" name="Nit" placeholder="Nit" value="" class="txtid" required /> </center> <br /><br />

            <center><input type="text" name="Farmaco" placeholder="Farmaco" value="" required class="txtid" /> </center> <br /><br />
            <center><input type="number" name="Existencia" placeholder="Cantidad" value="" class="txtid" required /> </center> <br /><br />
            <center>
                <input type="button" value="Menu" class="bt" id="but1" onclick="redireccionarInicio()" />
                <input type="submit" value="Comprar" class="bt" />
            </center>
        </form>

    </div>
</body>
</html>
